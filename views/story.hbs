{{#if own}}
    <a href="/edit/{{story._id}}">Edit Story</a>
    <a href="/delete/{{story._id}}">Delete Story</a>
{{else}}
    {{#if liked}}
        <a href="/like/{{story._id}}">Unlike Story</a>
    {{else}}
        <a href="/like/{{story._id}}">Like Story</a>
    {{/if}}

    {{#if bookmarked}}
        <a href="/bookmark/{{story._id}}">Unbookmark Story</a>
    {{else}}
        <a href="/bookmark/{{story._id}}">Bookmark Story</a>
    {{/if}}
{{/if}}

<div>
    title: {{story.title}}
    location: {{story.location}}
    posted on: {{story.timestamp}}
    likes: {{story.likes.length}}
    content : {{story.content}}
    {{#each story.images}}
        {{this}}
        <img src="/{{this}}">
    {{/each}}
    comments: 
        {{#each story.comments}}  
            user : {{this.username}} {{this.timestamp}} {{this.body}}
        {{/each}}
</div>

{{#unless own}}
    <form method="post" action="">
        <textarea name="comment">Leave a Comment!</textarea>
        <input type="submit" value="Submit">
    </form>
{{/unless}}
