{{#if own}}
    <a href="/logout">Logout</a>
    <a href="/edit">Edit Profile</a>
    <a href="/delete">Delete Profile</a>
    <a href="/bookmarked">Bookmarks</a>
    <a href="/liked">Likes</a>
{{else}}
    {{#if following}}
        <a href="/follow/{{user._id}}">Unfollow</a>
    {{else}}
        <a href="/follow/{{user._id}}">Follow</a>
    {{/if}}
{{/if}}

{{#each stories}}
    <div onclick = "location.href = '/story/{{this._id}}';" style="cursor: pointer;">
        title: {{this.title}}
        location: {{this.location}}
        posted on: {{this.timestamp}}
        likes: {{this.likes.length}}
    </div>
{{/each}}

